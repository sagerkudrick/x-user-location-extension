{
  "manifest_version": 3,
  "name": "X.com Cache Monitor",
  "version": "1.0",
  "permissions": ["storage", "cookies", "activeTab", "scripting"],

  "host_permissions": [
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "64": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}
